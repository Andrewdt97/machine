<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard1.3;net45</TargetFrameworks>
    <PackageTargetFallback Condition="'$(TargetFramework)'=='netstandard1.3'">$(PackageTargetFallback);portable-win+net4+sl5+wp8+win8+wpa81+MonoAndroid10+MonoTouch10+Xamarin.iOS10</PackageTargetFallback>
  </PropertyGroup>

  <Import Project="../AssemblyInfo.props" />

  <ItemGroup>
    <PackageReference Include="BuildDependencyTasks" Version="0.2.9" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\SIL.Core\SIL.Core.csproj" />
    <ProjectReference Include="..\SIL.Machine\SIL.Machine.csproj" />
  </ItemGroup>

  <PropertyGroup>
    <BuildDependencyTasksPath Condition="$(BuildDependencyTasksPath) == '' Or $(BuildDependencyTasksPath) == '*Undefined*'">$(NuGetPackageRoot)\BuildDependencyTasks\0.2.9</BuildDependencyTasksPath>
  </PropertyGroup>
  <UsingTask TaskName="Dependencies" AssemblyFile="$(BuildDependencyTasksPath)\BuildDependencyTasks.dll" />
  <Target Name="DownloadThot" Condition="'$(TargetFramework)'=='netstandard1.3'" AfterTargets="Build">
    <Dependencies DependencyFile="SIL.Machine.Translation.Thot.dep" UseDependencyFile="true" KeepJobsFile="true" />
  </Target>
</Project>